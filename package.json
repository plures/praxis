{
  "name": "@plures/praxis",
  "version": "0.2.0",
  "description": "The Full Plures Application Framework - declarative schemas, logic engine, component generation, and local-first data",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "praxis": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./svelte": {
      "types": "./dist/integrations/svelte.d.ts",
      "default": "./dist/integrations/svelte.js"
    },
    "./schema": {
      "types": "./dist/core/schema/types.d.ts",
      "default": "./dist/core/schema/types.js"
    },
    "./component": {
      "types": "./dist/core/component/generator.d.ts",
      "default": "./dist/core/component/generator.js"
    },
    "./cloud": {
      "types": "./dist/cloud/index.d.ts",
      "default": "./dist/cloud/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "svelte": "./src/components/TerminalNode.svelte"
    }
  },
  "files": [
    "dist",
    "src",
    "core",
    "cli",
    "templates",
    "docs",
    "README.md",
    "FRAMEWORK.md",
    "src/components"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "cli": "node ./dist/cli/index.js"
  },
  "keywords": [
    "praxis",
    "framework",
    "plures",
    "logic",
    "schema",
    "component-generation",
    "local-first",
    "functional",
    "typescript",
    "state-management",
    "facts",
    "rules",
    "constraints",
    "orchestration",
    "canvas",
    "visual-development"
  ],
  "author": "Plures",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "js-yaml": "^4.1.1"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    }
  }
}
