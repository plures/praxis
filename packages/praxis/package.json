{
  "name": "@plures/praxis",
  "version": "1.2.12",
  "description": "The Full Plures Application Framework - declarative schemas, logic engine, component generation, and local-first data (unified package)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "praxis": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./svelte": {
      "types": "./dist/svelte.d.ts",
      "import": "./dist/svelte.js",
      "require": "./dist/svelte.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./cloud": {
      "types": "./dist/cloud.d.ts",
      "import": "./dist/cloud.js",
      "require": "./dist/cloud.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "praxis",
    "framework",
    "plures",
    "logic",
    "schema",
    "component-generation",
    "local-first",
    "functional",
    "typescript",
    "state-management",
    "facts",
    "rules",
    "constraints",
    "orchestration",
    "canvas",
    "visual-development",
    "svelte"
  ],
  "author": "Plures",
  "license": "MIT",
  "dependencies": {
    "@plures/praxis-core": "workspace:*",
    "@plures/praxis-cli": "workspace:*",
    "@plures/praxis-svelte": "workspace:*",
    "@plures/praxis-cloud": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^5.46.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
