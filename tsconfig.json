{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@praxis/core/*": ["./core/*"],
      "@praxis/ui/*": ["./ui/*"],
      "@praxis/tools/*": ["./tools/*"]
    }
  },
  "include": ["src/**/*", "core/**/*", "ui/**/*", "tools/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
